<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="taller.seccion_tree">
      <field name="name">seccion tree</field>
      <field name="model">taller.seccion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="reparation"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.seccion_form">
      <field name="name">seccion form</field>
      <field name="model">taller.seccion</field>
      <field name="arch" type="xml">
        <form><sheet><group>
          <field name="name"/>
          <field name="reparation"/>
        </group></sheet></form>
      </field>
    </record>

  </data>
</odoo>
