<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="taller.booking_tree">
      <field name="name">booking tree</field>
      <field name="model">taller.booking</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="taller_aux"/>
          <field name="customer"/>
          <field name="date"/>
          <field name="reparation"/>
          <field name="status"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.booking_form">
      <field name="name">booking form</field>
      <field name="model">taller.booking</field>
      <field name="arch" type="xml">
        <form>

          <header>
            <button name="change_status" type="object" string="Change status"/>
            <field name="status" widget="statusbar"/>
          </header>
          <sheet>
          <group>
          <field name="name"/>
          <field name="taller_aux"/>
          <field name="customer"/>
          <field name="date"/>
          <field name="reparation"/>
        </group></sheet></form>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.booking_calendar">
      <field name="name">booking calendar</field>
      <field name="model">taller.booking</field>
      <field name="arch" type="xml">
        <calendar string="bookings" date_start="date"  color="taller_aux">
          <field name="customer"/>
          <field name="taller_aux"/>
        </calendar>
      </field>
    </record>

    <record model="ir.ui.view" id="taller.booking_search">
      <field name="name">booking search</field>
      <field name="model">taller.booking</field>
      <field name="arch" type="xml">
        <search>
          <filter name="group_by_garage" string="Group by garage" context="{'group_by': 'taller_aux'}"/>
          <filter name="group_by_status" string="Group by status" context="{'group_by': 'status'}"/>
          <filter name="Finalized" string="Finalized reparations" domain="[('status', '=', 'finalized')]"/>
          <filter name="Progressing" string="Reparations in progress" domain="[('status', '=', 'progressing')]"/>
          <filter name="Booking" string="Reparations booked" domain="[('status', '=', 'booking')]"/>
        </search>
      </field>
    </record>

  </data>
</odoo>
